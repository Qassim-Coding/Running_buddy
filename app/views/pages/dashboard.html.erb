<div class="main-container">
  <div class="right-section d-flex">
    <div class="suggestions">
      <%= render "layouts/filter_bar" %>
      <h3>Suggestions</h3>
      <div class="search">
        <div class="card-deck">
          <% @users.each do |user| %>
            <% unless user == current_user %>
              <div class="card suggestion-card shadow-lg">
                <%= cl_image_tag user.avatar.key, crop: :fill, gravity: :face, class: 'card-img-top' %>
                <div class="card-body">
                  <h4 class="card-title"><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></h4>
                  <p class="card-text">
                    <%= image_tag 'carte.png', class: 'emoticon' %> <%= user.address.split(',')[1].strip %>
                  </p>
                  <p class="card-text">
                    <%= image_tag 'sport (1).png', class: 'emoticon' %> <%= user.running_pace %> / km
                  </p>
                  <p class="card-text">
                    <%= image_tag 'stylo.png', class: 'emoticon' %> <%= user.description %>
                  </p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="map-section" style="width: 100%; height: 90vh; margin-left: 20px; position: sticky; top: 5vh;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
