<div class="main-container">
  <div class="right-section d-flex">
    <div class="suggestions">
      <%= render "layouts/filter_bar" %>
      <h3>Suggestions</h3>
      <div class="search dashboard">
        <div class="card-deck">
          <% @users.each do |user| %>
            <% unless user == current_user || @friends.include?(user) %>
              <%= link_to user_path(user), class: "card-link" do %>
                <div class="card suggestion-card shadow-lg">
                  <%= cl_image_tag user.avatar.key, gravity: :face, class: 'card-img-top' %>
                  <div class="card-body">
                    <h4 class="card-title"><%= user.first_name%> <%=user.last_name %></h4>
                    <p class="card-text">
                      <%= image_tag 'carte.png', class: 'emoticon' %> <%= user.address.split(',')[1].strip %>
                    </p>
                    <p class="card-text">
                      <%= image_tag 'sport (1).png', class: 'emoticon' %> <%= user.running_pace_minute_and_second %> / km
                    </p>
                    <p class="card-text">
                      <%= image_tag 'stylo.png', class: 'emoticon' %> <%= user.description %>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="map-section" style="height: 90vh; margin-left: 20px; position: sticky; top: 5vh;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
