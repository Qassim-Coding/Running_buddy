<div class="main-container">
  <div class="right-section">
    <div class="suggestions">
      <div class="top-bar">
        <%= link_to "City", dashboard_path(sort: 'city'), class: 'top-bar button' %>
        <%= link_to "Running Pace", dashboard_path(sort: 'pace'), class: 'top-bar button' %>
      </div>
      <h3>Suggestions</h3>
        <div class="card-deck">
          <% @users.each do |user| %>
            <div class="card suggestion-card">
              <%= cl_image_tag user.picture, class: 'card-img-top', style: 'width: 100%; height: auto;' %>
              <div class="card-body">
                <h4 class="card-title"><%= "#{user.first_name} #{user.last_name}" %></h4>
                <p class="card-text">
                  <%= cl_image_tag 'carte.png', class: 'emoticon' %> <%= user.address.split(',')[1].strip %>
                </p>
                <p class="card-text">
                  <%= cl_image_tag 'sport (1).png', class: 'emoticon' %> <%= user.running_pace %> km
                </p>
                <p class="card-text">
                  <%= cl_image_tag 'stylo.png', class: 'emoticon' %> <%= user.description %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <%# <section class="map-section"> %>
      <%# <%= image_tag 'map_runningtest.png', class: 'map-img' %>
    <%# </section> %>
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['pk.eyJ1Ijoicm94YW5uZXBldGl0IiwiYSI6ImNseGx1emI0aDAxeHMycXM2emNmaGdzN2UifQ.FpAi7o7on2pii6rU4OEt9wEY'] %>"></div>
  </div>
</div>
