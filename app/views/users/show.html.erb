<div class="profile-container container">

  <div class="images-container">
    <% if @user.photos.attached? %>
      <% @user.photos.each do |photo| %>
        <%= image_tag photo %>
      <% end %>
    <% else %>
      <%= image_tag "imageprofil1.jpg" %>
      <%= image_tag "imageprofil2.jpg"%>
      <%= image_tag "imageprofil3.jpg"%>
      <%= image_tag "imageprofil2.jpg" %>
      <%= image_tag "imageprofil3.jpg"%>
    <% end %>
  </div>

  <div class="infofinal">
    <div class="runner_info avatar-container">
      <% if @user.avatar.attached? %>
      <%= cl_image_tag @user.avatar.key, class: "avatar" %>
    <% else %>
      <%= image_tag "janesmith.jpg", class: "avatar" %>
    <% end %>
      <h1> <%= @user.first_name %> <%= @user.last_name %> <i class="fa-solid fa-bolt" style="color: #FFB200;"> </i> </h1>
      <p><%= @user.description %></p>
      <div class="placementbutton">
      <% unless current_user == @user  %>
        <% if @relationships_as_asker.empty? && @relationships_as_receiver.empty? %>
          <%= simple_form_for Relationship.new do |f| %>
            <div class="d-none">
              <%= f.input :receiver_id, input_html: { value: @user.id } %>
            </div>
            <%= f.button :submit, "Buddy up !", class: "btnshow overlay-text" %>
          <% end %>
      <% end %>
    <div class="container">
      <% @relationships.each do |relationship| %>
          <!-- Button trigger modal -->
        <button type="button" class="btnchatroom" data-bs-toggle="modal" data-bs-target="#exampleModal<%= relationship.id %>">
          Let's talk
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal<%= relationship.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%= render "relationships/show",  relationship: relationship %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
  <%= link_to '#scroll', id:"scrollDownArrow", class:"scroll-arrow" do %>
     <i class="fa-solid fa-arrow-down fa-2x" style="color: #7853DB;"></i>
  <% end %>

  <div class="all">
    <div class="info">

      <div class="runner-details">
        <div class="runner-detail">
          <i class="fa-solid fa-map-location-dot fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Location"></i>
          <p class="info" id="scroll"><%= @user.address %></p>
        </div>
        <div class="runner-detail">
          <i class="fa-solid fa-person-running fa-2x" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Running time"></i>
          <p class="info"><%= @user.running_pace_minute_and_second %> / km</p>
        </div>
        <div class="runner-detail">
          <i class="fa-regular fa-clipboard fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Preparation"></i>
          <p class="info"><%= @user.preparation %></p>
        </div>
        <div class="runner-detail">
          <i class="fa-solid fa-fire-flame-curved fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Other sport"></i>
          <p class="info"><%= @user.other_sport %></p>
        </div>
        <div class="runner-detail">
          <i class="fa-solid fa-chart-line fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Run frequency"></i>
          <p class="info"><%= @user.run_frequency %></p>
        </div>
        <div class="runner-detail">
          <i class="fa-regular fa-calendar fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Preference date"></i>
          <p class="info"><%= @user.preference_date%></p>
        </div><div class="runner-detail">
          <i class="fa-regular fa-clock fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Preference hour"></i>
          <p class="info"><%= @user.preference_hour%></p>
        </div><div class="runner-detail">
          <i class="fa-solid fa-bullseye fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Next official running event"></i>
          <p class="info"><%= @user.next_official_running_event%></p>
        </div>
        <div class="runner-detail">
          <i class="fa-solid fa-medal fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Previous official running event"></i>
          <p class="info"><%= @user.previous_run1%></p>
        </div>
        <div class="runner-detail">
          <i class="fa-solid fa-medal fa-2x iconshow" style="color: #7853DB;" data-toggle="tooltip" data-placement="bottom" title="Previous official running event"></i>
          <p class="info"><%= @user.previous_run2%></p>
        </div>
        </div>
      </div>

    <div class= "relation-container">
        <% @relationships.each do |relationship| %>
          <%= simple_form_for([relationship, Meeting.new]) do |f| %>
            <div class="form-group">
              <%= f.input :date, as: :date, html5: true, input_html: { class: 'date-picker' } %>
              <%= f.input :time, as: :time, html5: true, input_html: { class: 'time-picker' } %>
            </div>
            <div class="form-group">
              <%= f.label :location %>
              <%= f.text_field :location, class: 'form-control' %>
            </div>
            <%= f.submit "Let's go for a run !", class: "btnshowmeting"%>
          <% end %>
        <% end %>
    <% end %>

</div>
</div>
</div>
</div>
